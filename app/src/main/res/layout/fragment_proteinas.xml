<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProteinasFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvTitulo4"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/titleProteinas"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/Img2"
                android:layout_width="320dp"
                android:layout_height="220dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/img_proteinas" />

            <TextView
                android:id="@+id/tvDescripcionP1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="24dp"
                android:lineSpacingExtra="3dp"
                android:text="@string/descProteinas_1"
                android:textSize="18sp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:lineSpacingExtra="3dp"
                android:layout_margin="24sp"
                android:text="@string/descProteinas_2"
                android:textSize="18sp"
                android:textAlignment="center" />
        </LinearLayout>
    </ScrollView>


</FrameLayout>